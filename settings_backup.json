// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "preview_tabs": {
    "enable_preview_from_multibuffer": false
  },
  "tab_bar": {
    "show": true
  },
  "prettier": {
    "allowed": true
  },
  "enable_language_server": true,
  "lsp_document_colors": "inlay",
  "completions": {
    "lsp_insert_mode": "replace_suffix",
    "words_min_length": 3
  },
  "minimap": {
    "show": "never"
  },
  "show_signature_help_after_edits": true,
  "sticky_scroll": {
    "enabled": true
  },
  "excerpt_context_lines": 5,
  "expand_excerpt_lines": 5,
  "cursor_shape": "bar",
  "text_rendering_mode": "platform_default",
  "buffer_line_height": "comfortable",
  "session": {
    "trust_all_worktrees": true
  },
  "on_last_window_closed": "quit_app",
  "when_closing_with_no_tabs": "keep_window_open",
  "agent_servers": {
    "codex": {
      "default_config_options": {
        "reasoning_effort": "medium",
        "model": "gpt-5.3-codex",
      },
    },
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-6fdb282e-0c9c-4f1b-88f1-b0742f37bba6",
      },
    },
  },
  "show_edit_predictions": false,
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "gpt-5.2-codex",
    },
    "favorite_models": [],
    "model_parameters": [],
    "enable_feedback": false,
  },
  "use_system_window_tabs": true,
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
  },
  "file_finder": {
    "modal_max_width": "medium",
  },
  "colorize_brackets": true,
  "always_treat_brackets_as_autoclosed": true,
  "toolbar": {
    "selections_menu": true,
    "quick_actions": true,
    "breadcrumbs": true,
    "code_actions": false,
  },
  "relative_line_numbers": "disabled",
  "autoscroll_on_clicks": true,
  "double_click_in_multibuffer": "open",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark Pro",
  },
  "debugger": {
    "dock": "bottom",
  },
  "collaboration_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
  },
  "project_panel": {
    "bold_folder_labels": false,
    "auto_fold_dirs": false,
    "entry_spacing": "comfortable",
    "dock": "left",
  },
  "git_panel": {
    "collapse_untracked_diff": true,
    "status_style": "label_color",
    "tree_view": true,
    "dock": "left",
  },
  "icon_theme": {
    "mode": "system",
    "light": "Material Icon Theme",
    "dark": "Warm Charmed Icons",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "terminal": {
    "cursor_shape": "bar",
    "toolbar": {
      "breadcrumbs": false,
    },
    "default_height": 200.0,
    "dock": "bottom",
    "font_size": 14,
  },
  "tab_size": 2,
  "vim_mode": true,
  "autosave": "on_focus_change",
  "auto_signature_help": false,
  "buffer_font_features": {
    "calt": false,
  },
  "show_whitespaces": "all",
  "use_smartcase_search": true,
  "restore_on_startup": "last_session",
  "vim": {
    "cursor_shape": {
      "insert": "bar",
      "normal": "hollow"
    },
    "highlight_on_yank_duration": 200,
    "use_smartcase_find": true,
    "use_system_clipboard": "on_yank",
    "toggle_relative_line_numbers": true,
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "active_line_width": 1,
    "line_width": 1,
    "enabled": true,
    "coloring": "indent_aware",
  },
  "git": {
    "path_style": "file_name_first",
    "git_gutter": "tracked_files",
  },
  "inlay_hints": {
    "enabled": false,
    "show_background": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_value_hints": true,
    "show_other_hints": true,
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50,
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null,
    },
    "cargo": null,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hover",
    "show_diagnostics": "all",
  },
  "search": {
    "center_on_match": true,
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true,
  },
  "which_key": {
    "enabled": true,
  },
}
